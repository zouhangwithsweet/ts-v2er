/**
 * Eric Meyer's Reset CSS v2.0 (http://meyerweb.com/eric/tools/css/reset/)
 * http://cssreset.com
 */
@import '~mand-mobile/components/_style/global'
@import '~@/assets/styles/variable.styl'

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header,
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input
  user-select none
  margin: 0
  padding: 0
  border: 0
  font-size: 100%
  font-weight: normal
  vertical-align: baseline

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, menu, nav, section
  display: block

body
  line-height: 1

blockquote, q
  quotes: none

blockquote:before, blockquote:after,
q:before, q:after
  content: none

table
  border-collapse: collapse
  border-spacing: 0

/* custom */

a
  color: #7e8c8d
  -webkit-backface-visibility: hidden
  text-decoration: none

li
  list-style: none

body
  -webkit-text-size-adjust: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  font-family Roboto-Regular, Arial, sans-serif
  font-size $font-size-medium
  color $color-text

@font-face {
  font-family: Roboto-Regular;
  src: url('../fonts/roboto-v18-latin-regular.ttf')
}

@font-face {
  font-family: DINCondensed-Bold;
  src: url('../fonts/spcount.ttf')
}

body.sh-modal-open
  position fixed
  width 100%
  height 100%

// mand-mobile reset
.md-input-item
  transition all .24s
  
.md-field .md-field-content .md-field-item::before
  display none

.md-field .md-field-content .md-input-item .md-input-item-container::before
  display none

.md-button.primary
  overflow hidden
  .md-button-inner
    font-weight bold


.md-input-item-control::before
  content ""
  position absolute
  z-index 2
  background-color $background-light
  transform-origin 100% 50%
  transform scaleY(.5) translateY(100%)
  transition all .25s
  bottom 0
  left 0
  width 100%
  height 2px


.md-input-item.focus .md-input-item-control::before
  content ""
  position absolute
  z-index 2
  background-color #101010
  transform-origin center
  transform scaleY(.5) translateY(100%)
  bottom 0
  left 0
  width 100%
  height 2px
  animation expand .24s

.md-field .md-field-content .md-input-item.error .md-input-item-control:before
  content ""
  position absolute
  z-index 2
  background-color #ff525d
  -webkit-transform-origin 100% 50%
  transform-origin 100% 50%
  -webkit-transform scaleY(.5) translateY(100%)
  transform scaleY(.5) translateY(100%)
  bottom 0
  left 0
  width 100%
  height 2px
// 提示信息位置
.md-field .md-field-content .md-input-item.error
  margin-bottom 58px
.md-input-item .md-input-item-msg
  position absolute
  top 110px
  // bottom -40px


@keyframes expand
  0%
    transform scaleX(0) scaleY(.5) translateY(100%)
  100%
    transform scaleX(1) scaleY(.5) translateY(100%)

.md-icon.lg
  width: 48px
  height: 48px

.md-toast-content
  .md-icon.lg
    width 42px
    height 42px
